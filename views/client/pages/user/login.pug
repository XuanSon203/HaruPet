doctype html
html
  head
    title Form Người Dùng
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
    include ../../mixins/alert.pug
  body.bg-light
    +alert-error(5000)
    +alert-success(5000)

    .container.d-flex.justify-content-center.align-items-center.min-vh-100
      .card.shadow-lg.p-4(style="width: 100%; max-width: 420px; border-radius: 15px;")
        h2.text-center.mb-4.text-primary Đăng nhập

        form(action="/user/login", method="POST")
          .mb-3
            label.form-label(for="email") Email
            input#email.form-control(type="email", name="email", placeholder="Nhập email của bạn", required)

          .mb-3
            label.form-label(for="password") Mật khẩu
            input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu", required)

          .d-flex.justify-content-between.align-items-center.mb-3
            a(href="/user/forgot", class="text-decoration-none small text-muted") Quên mật khẩu?

          button.btn.btn-primary.w-100.mt-2(type="submit") Đăng nhập

          .text-center.mt-3
            span Chưa có tài khoản? 
            a(href="/user/register", class="text-decoration-none") Đăng ký
          .text-center
            a(href="/user/forgot-password") Quyên mật khẩu 

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/js/main.js")
