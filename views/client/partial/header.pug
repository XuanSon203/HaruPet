      if user
        .d-block
          a.btn.btn-outline-primary.mx-2(href='/my-account')
            if user.avatar
              img(src=user.avatar, alt='Avatar', width='30', height='30', class='rounded-circle me-2 align-middle')
            else
              i.bi.bi-person-square.me-2
            | #{user.fullName}
          a.btn.btn-outline-dark.text-white(href="/user/logout")
            i.bi.bi-box-arrow-right
            | Logout

      else 
        a.btn.btn-outline-primary(href="/user/register") Đăng ký  
        a.btn.btn-outline-primary(href="/user/login") Đăng nhập  
    
