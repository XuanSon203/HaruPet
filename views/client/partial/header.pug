      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse')
        span.navbar-toggler-icon

      .collapse.navbar-collapse.justify-content-between.px-3#navbarCollapse
        .navbar-nav.mr-auto.py-0
          a.nav-item.nav-link.active(href="/") Home
          a.nav-item.nav-link(href='/about') About
