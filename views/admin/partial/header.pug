header(class="bg-white shadow-sm border-bottom")
  .container-fluid.py-3
    .d-flex.justify-content-between.align-items-center
      h1(class="h4 mb-0 text-dark fw-bold") Admin Panel

      ul.nav
        if user
          li.nav-item.d-flex.align-items-center.ms-3
            span.fw-semibold.text-dark.me-2 #{user.fullName}
            a.nav-link.text-danger(href=`${prefixAdmin}/auth/logout`) Logout
        else 
            li.nav-item
            a.nav-link.text-secondary(href="/admin/auth/login") Login
