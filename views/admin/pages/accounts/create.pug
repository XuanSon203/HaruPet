extends ../../layout/layoutdefault.pug
include ../../mixins/alert.pug
block main
    .container.mt-5
        +alert-success(5000)
        +alert-error(5000)
        h2.text-center.mb-4.text-primary Thêm tài khoản 
        form(method="POST", action=`${prefixAdmin}/accounts/create` enctype="multipart/form-data" )
            .mb-3
                label.form-label(for="fullName") Họ và tên 
                input.form-control(type="text", name="fullName", id="fullName", required)
            .mb-3
            .mb-3
                label.form-label(for="password") Mật khẩu 
                input.form-control(type="password", name="password", id="password", required)
            .mb-3
            .mb-3
                label.form-label(for="email") Email 
                input.form-control(type="text", name="email", id="email", required)
            .mb-3
                label.form-label(for="phone") Điện thoại
                input.form-control(type="text", name="phone", id="phone", required)
            .mb-3
                div( class="form-group" upload-image)
                    label.form-label(for="avatar") Ảnh(URL):
                    input.form-control(type="file" name="avatar" accept="image/*" upload-image-input)
                    img(src="", alt="" upload-image-preview style=" width: 150px; margin-top: 10px;")
                    button.btn.btn-danger.mt-2(type="button" upload-image-remove) Xóa ảnh
                .mb-3
                    label.form-label(for="role_id") Phân Quyền :
                    select.form-control(name="role_id")
                        option(value="" disabled selected) -- Chọn -- 
                        each item in roles
                            option(value=item.id) #{item.title}

            button.btn.btn-success(type="submit") Thêm mới
            a.btn.btn-secondary.ms-2(href=`${prefixAdmin}/accounts`) Quay lại
